= render partial: "template/header"
= render partial: "template/exhibition"
= render partial: "template/purchase"

.product_btns
  .edit
    = link_to "この商品を編集する", "#"
  .destroy
    = link_to "この商品を削除する", "#", method: :delete
    

.second-header
  .category-bar
    =link_to "#", class:"transition" do
      %p.category-btn
        FURIMA
    %p.space
      >
    =link_to "#", class:"transition" do
      %p.category-btn
        親カテゴリ
    %p.space
      >
    =link_to "#", class:"transition" do
      %p.category-btn
        子カテゴリ
    %p.space
      >
    =link_to "#", class:"transition" do
      %p.category-btn
        孫カテゴリ
    %p.space
      >
    %p.category-btn
      商品名
.show-main
  .product-main
    .product-name
      %h2 
        = @products.name
    .product-image
      .product-image__main
        =image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", size: "560x346"
      .product-image__sub
        .product-image__second
          =image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png"
        .product-image__second
          =image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/14/a001.png"
        .product-image__second
          =image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/15/a003.png"
    .product-price
      %span
        ¥
        = @products.price
        円
      .product-price__detail
        %span (税込)
        %span 送料込み
    .product-detail
      %p 商品名
    .table
      %table
        %tbody
          %tr
            %th 出品者
            %td
              = @products.seller.user.nickname
          %tr
            %th カテゴリー
            %td
              =link_to "#", class:"transition table__category" do
                親カテゴリ
              %br
              =link_to "#", class:"transition table__category" do
                子カテゴリ
              %br
              =link_to "#", class:"transition table__category" do
                孫カテゴリ
          %tr
            %th 
              ブランド
            %td
              = @products.brand.name
          %tr
            %th 商品のサイズ
            %td
          %tr
            %th 商品の状態
            %td 新品に近い
          %tr
            %th 配送料の負担
            %td 
              = @products.seller.shipping_info.shipping_cost
          %tr
            %th 発送元の地域
            %td
              = @products.seller.shipping_info.shipping_area
          %tr
            %th 発送日の目安
            %td 
              = @products.seller.shipping_info.shipping_days
              日
    .option-area
      %ul
        %li.optional-btn.like-btn#like-btn
          %i.fa.fa-star
          お気に入り 0
      %ul
        %li.optional-btn
          =link_to "#" do
            %i.fa.fa-flag
            不適切な商品の通報

  .product-form
    = form_for(@product) do |f|
      %textarea
      %p.notice-message
        相手のことを考え丁寧なコメントを心がけましょう。
        %br
        不快な言葉遣いなどは利用制限や退会処分となることがあります。
        %br
      %button.comment-btn{ type: 'submit' }
        %i.fa.fa-comment
        コメントする
  .links
    %p.links_left
      = link_to "#" do
        < 前の商品
    %p.links_right
      = link_to "#" do
        後ろの商品 >
  .related-items
    =link_to "#" do
      親カテゴリをもっとみる
      
= render partial: "template/content_download"
= render partial: "template/footer"