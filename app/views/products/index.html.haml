= render partial: "template/exhibition"
= render partial: "template/header"

.second-header
  .category-bar
    =link_to "/", class:"transition" do
      %p.category-btn
        FURIMA
    %p.space
      >
    =link_to "#", class:"transition" do
      %p.category-btn
        カテゴリー一覧
    %p.space
      >
    =link_to "#", class:"transition" do
      %p.category-btn
        - @parents.each do |parent|
          =parent.category_name
          %br
    %p.space
      >
    =link_to "#", class:"transition" do
      %p.category-btn
        - @parents.each do |parent|
          - parent.children.each do |child|
            =child.category_name
            %br
    %p.space
      >
    =link_to "#", class:"transition" do
      - @parents.each do |parent|
        - parent.children.each do |child|
          - child.children.each do |grandchild|
            =grandchild.category_name
            %br
.show-main
  .index
    .index-main
      .index-title
        %h2 孫カテゴリーの商品一覧
      .product-lists
        - @products.each do |product|
          - if true
            .product-list
              =link_to product_path(product) do
                %figure.product-list__image
                  =image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/14/a001.png", class:"image"
                .product-list__body
                  %h3
                    = product.name
                  .product-list__detail
                    %ul
                      %li
                        = product.price
                      %li
                        %i.fa.fa-star
                        0
                    %p (税込)
          - else
            .product-list
              =link_to product_path(product) do
                %figure.product-list__image
                  =image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/14/a001.png", class:"image"
                  %figure.product-list__image--second
                    =image_tag "https://3.bp.blogspot.com/-nsmeh2q3S3c/U-8GiO6Sx8I/AAAAAAAAk6Q/ICL70NoWs8Y/s800/pop_sold_out.png", class:"image_second"
                .product-list__body
                  %h3
                    = product.name
                  .product-list__detail
                    %ul
                      %li
                        = product.price
                      %li
                        %i.fa.fa-star
                        0
                    %p (税込)


