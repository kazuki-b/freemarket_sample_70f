= render partial: "template/header"
= render partial: "template/exhibition"

.selle_contents
  .user_show__devise
    .user_show__devise--title
      ユーザー情報
    .user_show__devise--icon
      = form_for @user do |f|
        .icon
          = f.label :user_image, class: "fas fa-smile" do
            = f.file_field :user_image, style: "display: none;"
        .nickname
          nickname
        .profile
          プロフィール
        .description
          = f.text_area :introduction, placeholder: "ご自身のプロフィール", class: "text_area"
        .selle_submit
          = f.submit "変更する", class: "submit"
    .show_title
      本人情報
      = form_for ("#") do |f|
        .real_name
          .first_name
            .name_title
              性
            .name_title
              せい
          .first_name_form
            .name_form
              = f.text_field :family_name, class: "user_input_name", placeholder: "性"
            .name_form
              = f.text_field :family_name_kana, class: "user_input_name", placeholder: "せい"
          .first_name
            .name_title
              名
            .name_title
              めい
          .first_name_form
            .name_form
              = f.text_field :first_name, class: "user_input_name", placeholder: "名"
            .name_form
              = f.text_field :first_name_kana, class: "user_input_name", placeholder: "めい"
        .show_form_flex
          .show_user_titles
            .show_user_title
              メールアドレス
            .show_user_title
              パスワード
            .show_user_title
              郵便番号
            .show_user_title
              都道府県
            .show_user_title
              市区町村
            .show_user_title
              丁目番地
            .show_user_title
              建物名、号室
          .show_user_form
            .email
              = f.text_field :email, class: "show_user_input", placeholder: "メールアドレス"
            .password
              = f.text_field :password, class: "show_user_input", placeholder: "パスワード"
            .post_code
              = f.text_field :post_code, class: "show_user_input", placeholder: "郵便番号"
            .prefecture
              = f.text_field :prefecture, class: "show_user_input", placeholder: "都道府県"
            .city
              = f.text_field :city, class: "show_user_input", placeholder: "市区町村"
            .adress
              = f.text_field :adress, class: "show_user_input", placeholder: "丁目番地"
            .building_name
              = f.text_field :building_name, class: "show_user_input", placeholder: "建物名、号室"
            .selle_submit
              = f.submit "変更する", class: "submit"
= render partial: "template/footer"